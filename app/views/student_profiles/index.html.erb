  <h1>Listing Student Profiles</h1>

  <table>
    <thead>      <tr>
        <th>Student</th>
        <th>User</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Github url</th>
        <th>Profile img</th>
        <th>Short description</th>
        <th>Long decription</th>
        <th>Skills</th>
        <th>Part time</th>
        <th>Full time</th>
        <th>Contract</th>
        <th>Public</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <#% @student_profiles.each do |student_profile| %>
        <tr>
          <td><%= student_profile.student_id %></td>
          <td><%= student_profile.user_id %></td>
          <td><%= student_profile.first_name %></td>
          <td><%= student_profile.last_name %></td>
          <td><%= student_profile.github_url %></td>
          <td><%= student_profile.profile_img %></td>
          <td><%= student_profile.short_description %></td>
          <td><%= student_profile.long_decription %></td>
          <td><%= student_profile.skills %></td>
          <td><%= student_profile.part_time %></td>
          <td><%= student_profile.full_time %></td>
          <td><%= student_profile.contract %></td>
          <td><%= student_profile.public %></td>
          <% if can? :edit, student_profile %>
              <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
          <% end %>
          <td><%= link_to 'Show', student_profile %></td>
          
          <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


