<p id="notice"><%= notice %></p>

<h1>Listing Business Profiles</h1>
<br>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>User</th>
      <th>Business name</th>
      <th>Url of business</th>
      <th>Description business</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_profiles.each do |business_profile| %>
      <tr>
        <td><%= business_profile.business_id %></td>
        <td><%= business_profile.user_id %></td>
        <td><%= business_profile.business_name %></td>
        <td><%= business_profile.url_of_business %></td>
        <td><%= business_profile.description_business %></td>
        <td><%= link_to 'Show', business_profile %></td>
        <td><%= link_to 'Edit', edit_business_profile_path(business_profile) %></td>
        <td><%= link_to 'Destroy', business_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "login") %>
<% else %>
  <%= link_to('Login', new_user_session_path, class: "login") %>
<% end %>


