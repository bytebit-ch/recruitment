


<div class="forgot-password">

  <div class="password-content">



    <p><strong>Can't sign in? Forget your password?</strong><br>
        <p>Enter your email address below and we'll send you password reset instructions.</p>

    	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
     	 <%= devise_error_messages! %>

        <div class="login-field">
           <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "password-input" %>
        </div>

        <div class="login-field">
          <%= f.submit "Send me reset password instructions", class: "button" %>
        </div>

      <% end %>

        <div class="password-link">
            <p>Never mind, <span><%- if controller_name != 'sessions' %>
              <%= link_to "send me back to the sign-in screen", new_session_path(resource_name), class: "password-login" %><br />
              <% end -%></span>
            </p>
        </div>




  </div>

</div>




