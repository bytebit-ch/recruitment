

<div class="login-card">

  <div class="login-content">



    <p>Sign up now for <br><strong>Recruitment</strong></p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="login-field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "login-input" %>
      </div>

      <div class="login-field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "login-input" %>
      </div>

      <div class="login-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "login-input" %>
      </div>

      <div class="login-field">
        <%= f.submit "Sign up", class: "button" %>
      </div>
      <% end %>



  </div>
  
</div>

<%= render "devise/shared/links" %>
</div>