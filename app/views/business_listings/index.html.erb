<p id="notice"><%= notice %></p>

<h1>Listing Business Listings</h1>

<table>
  <thead>
    <tr>
      <th>Skills wanted</th>
      <th>Title</th>
      <th>Part time</th>
      <th>Full time</th>
      <th>Contract</th>
      <th>Job description</th>
      <th>Contact email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_listings.each do |business_listing| %>
      <tr>
        <td><%= business_listing.skills_wanted %></td>
        <td><%= business_listing.title %></td>
        <td><%= business_listing.part_time %></td>
        <td><%= business_listing.full_time %></td>
        <td><%= business_listing.contract %></td>
        <td><%= business_listing.job_description %></td>
        <td><%= business_listing.contact_email %></td>
        <td><%= link_to 'Show', business_listing %></td>
        <td><%= link_to 'Edit', edit_business_listing_path(business_listing) %></td>
        <td><%= link_to 'Destroy', business_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

