<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
	<!-- Preloader -->
	<div id="preloader">
	  <div id="load"></div>
	</div>

  <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">

      <div class="logo">
        <p class="logo-text">Recruitment<br>Platform</p>
        <%= image_tag 'logo.png', class: "logo-img" %>
      </div>
