      </div>
 -->
<!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
      <ul class="nav navbar-nav">

        <li class="active">
          <% if user_signed_in? and current_user and current_user.type_of_user == "student" %>
            <%= link_to('Home', business_profiles_path) %>
          <% elsif user_signed_in? and current_user and current_user.type_of_user == "business" %>
            <%= link_to('Home', student_profiles_path) %>
          <% elsif user_signed_in? and current_user and current_user.type_of_user == "admin" %>
            <%= link_to('Home', admin_path) %>
          <% end %>
        </li>

        <li>
          <% if current_page?('/') or current_page?('/landing/index') %>
            <a href="#service">Why Join?</a>
          <% end %>
        </li>

    		<li>
          <% if current_page?('/') or current_page?('/landing/index') %>
            <a href="#about">Our Students</a>
          <% end %>
        </li>

        <li>   
          <% if user_signed_in? and current_user and current_user.type_of_user == "admin" %>
            <% mailer_all = [] %>
            <% @business_profiles.each do |business_profile| %>
                 <% mailer_all.append(business_profile.user.email) %>
            <% end %>
            <a href='mailto:<%= mailer_all.join(",") %>'>Mail All</a>
          <% end %>
        </li>

        <li>
         <% if user_signed_in? and current_user and current_user.type_of_user == "business" %>
           <%= link_to('Post new job', new_business_listing_path, class: 'business-profile-button') %>
         <% end %>
        </li>

        <li>
          <% if user_signed_in? and current_user and current_user.type_of_user == "student" %>
            <%= link_to('My Profile', current_user, class: 'student-profile-button') %>
          <% elsif user_signed_in? and current_user and current_user.type_of_user == "business" %>
            <%= link_to('My Profile', current_user, class: 'business-profile-button') %>
          <% end %>
        </li>

        <li class="dropdown">
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path, class: "login") %>
        <% end %>
              
      </ul>
    </div>
  </nav>
	

<%= yield %>

